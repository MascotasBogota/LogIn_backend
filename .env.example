# Ejemplo de archivo .env
# Copia este archivo como .env y completa con tus datos reales

# MongoDB Atlas - Reemplaza con tu cadena de conexión real
MONGO_URI=mongodb+srv://usuario:contraseña@cluster0.xxxxx.mongodb.net/mascotas-app?retryWrites=true&w=majority

# JWT Secret - Usa una clave secreta fuerte y única
JWT_SECRET=tu_clave_secreta_super_segura_aqui

# Puerto del servidor
PORT=5000

# Modo de desarrollo
FLASK_ENV=development

# Configuración de Email (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=tu_email@gmail.com
SMTP_PASSWORD=tu_password_de_aplicacion
FROM_EMAIL=tu_email@gmail.com

# URL del Frontend (para enlaces de reset)
FRONTEND_URL=http://localhost:3000
